<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="horizontal"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:gravity="top|left"
 >
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical" 
      android:gravity="center"
      android:padding="5dp"
    android:background="#AAAA">
	  <Button
	      android:id="@+id/invert"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
		  android:background="@drawable/invert" />

      <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/invert" />
  </LinearLayout>
<HorizontalScrollView
    android:id="@+id/scrollEffects"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#AAAA" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="center"
            android:padding="5dp">
        <Button
            android:id="@+id/edgedetect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edgedetect"
            android:onClick="applyEffect" />
        <TextView android:text="@string/edgedetect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="center"
            android:padding="5dp">
        <Button
            android:id="@+id/edgedetecttransparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edgedetect"
            android:onClick="applyEffect" />
        <TextView android:text="@string/edgedetecttransparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="center"
            android:padding="5dp">
