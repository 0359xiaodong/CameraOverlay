        <TextView android:text="@string/high_contrast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="center"
            android:padding="5dp">
        <Button
            android:id="@+id/gray_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grayscale"
            android:onClick="applyEffect" />
        <TextView android:text="@string/gray_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
