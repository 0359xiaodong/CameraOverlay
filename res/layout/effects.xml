            android:id="@+id/alpha4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alpha4"
            android:onClick="applyEffect" />
        <TextView android:text="@string/alpha4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="center"
            android:padding="5dp">
        <Button
            android:id="@+id/alpha5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alpha5"
            android:onClick="applyEffect" />
        <TextView android:text="@string/alpha5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="center"
            android:padding="5dp">
        <Button
            android:id="@+id/contrastbw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/contrastbw"
            android:onClick="applyEffect" />
        <TextView android:text="@string/contrast_bw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="center"
            android:padding="5dp">
        <Button
            android:id="@+id/original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon64"
            android:onClick="applyEffect" />
        <TextView android:text="@string/original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    

</HorizontalScrollView>
</LinearLayout>